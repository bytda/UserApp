<Window x:Class="UsersApp.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UsersApp"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid Background="DarkGray">
        <Border MinWidth="200" Margin="15" Background="White" VerticalAlignment="Center" Padding="30" MaxWidth="400">
            <StackPanel>
                <TextBlock Text="Авторизация" FontSize="30" FontWeight="Light" Margin="10 0 0 10"/>


                <TextBlock Margin="10 0 0 10" MinWidth="60" HorizontalAlignment="Center">Введите логин:</TextBlock>
                <TextBox x:Name="BoxLogin" Margin="10 0 0 10" MinWidth="90" HorizontalAlignment="Center"></TextBox>
                <TextBlock Margin="10 0 0 10" MinWidth="90" HorizontalAlignment="Center">Введите пароль:</TextBlock>
                <TextBox x:Name="BoxPassword" Margin="10 0 0 10" MinWidth="90" HorizontalAlignment="Center"></TextBox>
                <Grid Margin="10 0 0 10">

                    
                    <Button HorizontalAlignment="Center" MinWidth="90" MinHeight="30" Click="ButtonAuth_Click">Войти</Button>

                </Grid>
            </StackPanel>
        </Border>


    </Grid>
</Window>
